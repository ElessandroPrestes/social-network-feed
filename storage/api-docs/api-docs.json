{
    "openapi": "3.0.0",
    "info": {
        "title": "Post API",
        "description": "API for Post",
        "contact": {
            "email": "elessandrodev@gmail.com"
        },
        "license": {
            "name": "MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/v1/posts": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "description": "Return posts in descending order",
                "operationId": "getAllPosts",
                "responses": {
                    "200": {
                        "description": "Posts Successfully listed."
                    }
                }
            },
            "post": {
                "tags": [
                    "Posts"
                ],
                "description": "Create Post",
                "operationId": "c599878a9a0c89930a40d45748861909",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Thanos"
                                    },
                                    "image": {
                                        "type": "string",
                                        "example": "https://example.com/thanos.jpg"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "A powerful villain obsessed with balance in the universe."
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Post Register Successfully."
                    }
                }
            }
        },
        "/api/v1/posts/{id}": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "description": "Retrieve a Post by ID.",
                "operationId": "getPostById",
                "parameters": [
                    {
                        "name": "ID",
                        "in": "path",
                        "description": "ID of the post to be retrieved.",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Post Successfully listed.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Post Name"
                                        },
                                        "image": {
                                            "type": "file",
                                            "example": "public/image.jpg"
                                        },
                                        "description": {
                                            "type": "string",
                                            "example": "Post Description"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Post Not Found"
                    }
                }
            }
        }
    }
}